{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "src",
    "downlevelIteration": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "paths": {
      "@backend-bridge/*": ["app/backend-bridge/*"],
      "@core/*": ["app/core/*"],
      "@modules/*": ["app/modules/*"],
      "@pages/*": ["app/pages/*"],
      "@store/*": ["app/store/*"]
    }
  },
  "include": ["src/**/*", "node_modules/file-type/**/*"]
}
